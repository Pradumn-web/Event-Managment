@{
    ViewBag.Title = "Events";
}

<div class="container-fluid">
    <div class="row">
        <!-- Filter Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="position-sticky" style="top: 100px;">
                <div class="bg-white border rounded shadow-sm p-4">
                    <h5 class="fw-bold mb-4">Filter Events</h5>
                    <form id="filterForm">
                        <!-- Language -->
                        <div class="mb-4">
                            <h6 class="fw-semibold text-primary">Language</h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var lang in new[] { "Hindi", "English", "Marathi" })
                                {
                                    <input type="checkbox" class="btn-check" id="lang-@lang" name="language" value="@lang">
                                    <label class="btn btn-outline-primary btn-sm" for="lang-@lang">@lang</label>
                                }
                            </div>
                        </div>

                        <!-- Category -->
                        <div class="mb-4">
                            <h6 class="fw-semibold text-success">Category</h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var cat in new[] { "Music", "Comedy", "Drama" })
                                {
                                    <input type="checkbox" class="btn-check" id="cat-@cat" name="category" value="@cat">
                                    <label class="btn btn-outline-success btn-sm" for="cat-@cat">@cat</label>
                                }
                            </div>
                        </div>

                        <!-- Price -->
                        <div class="mb-4">
                            <h6 class="fw-semibold text-warning">Price</h6>
                            <div class="d-flex flex-wrap gap-2">
                                <input type="checkbox" class="btn-check" id="price1" name="price" value="0-500">
                                <label class="btn btn-outline-warning btn-sm" for="price1">₹0 - ₹500</label>

                                <input type="checkbox" class="btn-check" id="price2" name="price" value="500-1000">
                                <label class="btn btn-outline-warning btn-sm" for="price2">₹500 - ₹1000</label>

                                <input type="checkbox" class="btn-check" id="price3" name="price" value="1000+">
                                <label class="btn btn-outline-warning btn-sm" for="price3">₹1000+</label>
                            </div>
                        </div>

                        <!-- Date -->
                        <div class="mb-4">
                            <h6 class="fw-semibold text-dark">Date</h6>
                            <div class="d-flex flex-wrap gap-2">
                                <input type="checkbox" class="btn-check" id="today" name="date" value="Today">
                                <label class="btn btn-outline-dark btn-sm" for="today">Today</label>

                                <input type="checkbox" class="btn-check" id="tomorrow" name="date" value="Tomorrow">
                                <label class="btn btn-outline-dark btn-sm" for="tomorrow">Tomorrow</label>

                                <input type="checkbox" class="btn-check" id="weekend" name="date" value="Weekend">
                                <label class="btn btn-outline-dark btn-sm" for="weekend">This Weekend</label>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">Apply Filters</button>
                            <button type="reset" class="btn btn-light border">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Events Section -->
        <div class="col-lg-9">
            <h3 class="fw-bold mb-4">Upcoming Events</h3>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var g in ViewBag.b)
                {
                    <div class="col">
                        <div class="card border-0 shadow-sm h-100">
                            @{
                                string base64Image = "data:image/png;base64," + Convert.ToBase64String((byte[])g.Event_Poster);
                            }

                            <!--  Show full image inside the card, scaled to fit -->
                            <img src="@base64Image"
                                 class="card-img-top img-fluid"
                                 style="max-height: 300px; width: 100%; object-fit: contain;" />

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-2">@g.Event_title</h5>
                                <p class="text-muted small mb-2">@g.Speaker_Singer</p>
                                <p class="mb-2 fw-semibold text-success">@g.Price</p>
                                <a href="/Home/Details/@g.EventId" class="btn btn-outline-primary mt-auto">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
