
@{
    ViewBag.Title = "Orders";
}

@*<h2>Orders</h2>*@

<!-- Page Heading -->
<div class="container py-5">
    <h2 class="mb-4 fw-bold text-center">My Bookings</h2>

    <!-- Orders List -->
    <div class="row g-4">

        <!-- Order Card -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="row g-0">
                    <!-- Event Image -->
                    <div class="col-md-4">
                        <img src="https://via.placeholder.com/150x200.png?text=Event" class="img-fluid h-100 rounded-start" alt="Event Poster">
                    </div>

                    <!-- Event Details -->
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title mb-1">Concert Night Live</h5>
                            <p class="text-muted small mb-2">JLN Stadium, Delhi</p>
                            <p class="mb-1"><strong>Date:</strong> 25 July 2025</p>
                            <p class="mb-1"><strong>Time:</strong> 7:00 PM</p>
                            <p class="mb-1"><strong>Tickets:</strong> 2</p>
                            <p class="mb-2"><strong>Seats:</strong> B12, B13</p>
                            <span class="badge bg-success">Confirmed</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Another Order Card -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://via.placeholder.com/150x200.png?text=Movie" class="img-fluid h-100 rounded-start" alt="Movie Poster">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title mb-1">Movie Premiere: Galaxy Wars</h5>
                            <p class="text-muted small mb-2">INOX, Noida</p>
                            <p class="mb-1"><strong>Date:</strong> 30 July 2025</p>
                            <p class="mb-1"><strong>Time:</strong> 9:30 PM</p>
                            <p class="mb-1"><strong>Tickets:</strong> 3</p>
                            <p class="mb-2"><strong>Seats:</strong> C10, C11, C12</p>
                            <span class="badge bg-warning text-dark">Pending</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add more orders dynamically as needed -->

    </div>
</div>