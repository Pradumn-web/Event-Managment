
@{
    ViewBag.Title = "ListYourShow";
}

@*<h2>ListYourShow</h2>*@

<!-- Page Title -->
<div class="container my-5 text-center">
    <h2 class="fw-bold">List Your Show With Us</h2>
    <p class="text-muted">Sell your event tickets with ease. Reach millions of customers.</p>
</div>

<!-- Step by Step Listing Process -->
<div class="container mb-5">
    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">1. Register Your Business</h5>
                    <p class="card-text text-muted">Create an account to get started with listing your event or venue.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">2. Add Event Details</h5>
                    <p class="card-text text-muted">Fill in all details like name, category, venue, date, and ticket pricing.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">3. Go Live & Sell</h5>
                    <p class="card-text text-muted">Once approved, your event goes live and you can start selling tickets.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Why List With Us Section -->
<div class="container mb-5">
    <div class="row align-items-center g-4">
        <div class="col-md-6">
            <h4 class="fw-semibold">Why Choose MyEvent to List?</h4>
            <ul class="list-group list-group-flush mt-3">
                <li class="list-group-item">✔ Access to 5M+ monthly users</li>
                <li class="list-group-item">✔ Real-time ticket tracking dashboard</li>
                <li class="list-group-item">✔ Fast payment settlements</li>
                <li class="list-group-item">✔ 24x7 Partner Support</li>
            </ul>
        </div>
        <div class="col-md-6">
            <img src="https://cdn-icons-png.flaticon.com/512/18986/18986886.png " class="img-fluid" alt="Benefits">
        </div>
    </div>
</div>

<!-- CTA Box -->
<div class="container mb-5">
    <div class="card text-center shadow-sm border-0" style="background-color: #f8f9fa;">
        <div class="card-body p-4">
            <h5 class="card-title fw-bold">Ready to List Your Show?</h5>
            <p class="card-text text-muted">Click below to register your event and start selling tickets now!</p>
            <a href="#" class="btn btn-primary btn-lg">Start Listing</a>
        </div>
    </div>
</div>