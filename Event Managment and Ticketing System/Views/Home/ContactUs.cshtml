
@{
    ViewBag.Title = "ContactUs";
}

@*<h2>ContactUs</h2>*@
<!-- Contact Section -->
<div class="container py-5">
    <div class="text-center mb-4">
        <h2>Contact Us</h2>
        <p class="text-muted">Have questions or need help? Get in touch with us.</p>
    </div>

    <div class="row g-4">
        <!-- Contact Form -->
        <div class="col-md-7">
            <div class="card p-4 shadow-sm">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" placeholder="Your name" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email address</label>
                        <input type="email" class="form-control" placeholder="name@example.com" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Subject</label>
                        <input type="text" class="form-control" placeholder="Subject" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Your Message</label>
                        <textarea class="form-control" rows="5" placeholder="Write your message here..." required></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>

        <!-- Contact Info -->
        <div class="col-md-5">
            <div class="card p-4 bg-light shadow-sm">
                <h5>Contact Information</h5>
                <p class="mb-2"><strong>Address:</strong><br> 123 Event Road, New Delhi, India</p>
                <p class="mb-2"><strong>Phone:</strong><br> +91 98765 43210</p>
                <p class="mb-2"><strong>Email:</strong><br> support@myevent.com</p>
                <hr>
                <p class="mb-0 text-muted">Our support team is available 10 AM – 7 PM, Mon – Sat.</p>
            </div>
        </div>
    </div>
</div>

